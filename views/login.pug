extends layout

block content
  .jumbotron
    h1= title
    form#login-form(action="/", method="post")
      .lead
        .form-group.text-left
          label.control-label(for="username") Username:
          input#username.form-control(type="text", name="username")
        .form-group.text-left(class=typeof error === "undefined" ? undefined : "has-error")
          label.control-label(for="password") Password:
          input#password.form-control(type="password", name="password")
        
        if error
          .alert.alert-danger
            p(style="font-size: initial")= error
      
      button.btn.btn-lg.btn-success(type="submit") Login

  .row.marketing
    .col-lg-6
      a.btn.btn-lg.btn-primary.text-center(href="/student-check-in") Student check-in
